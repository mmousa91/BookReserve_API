		{
			"name": "list of books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Parse the response data into JSON format\r",
							"const response = pm.response.json();\r",
							"\r",
							"// Filter the books to get only the available ones\r",
							"const nonfictionsbook = response.filter((book) => book.available === true);\r",
							"\r",
							"// Log the first book in the filtered array to the console\r",
							"console.log(nonfictionsbook[0]);\r",
							"\r",
							"// Store the ID of the first available book in a collection variable\r",
							"pm.collectionVariables.set(\"bookId\", nonfictionsbook[0].id);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{book baseurl}}/books?type=non-fiction&limit=3",
					"host": [
						"{{book baseurl}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "type",
							"value": "non-fiction"
						},
